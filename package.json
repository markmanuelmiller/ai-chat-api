{
  "name": "ai-chat-api",
  "version": "1.0.0",
  "description": "AI Chat API with WebSockets and LangChain integration",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json",
    "cli": "ts-node -r tsconfig-paths/register src/cli/index.ts",
    "cli:build": "tsc -p tsconfig.json && node dist/cli/index.js",
    "cli:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/cli/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest --testMatch=\"**/tests/unit/**/*.test.ts\"",
    "test:integration": "dotenv jest src/tests/integration/debug-stream.test.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:up": "docker-compose up -d",
    "docker:up:build": "docker-compose up -d --build",
    "docker-with-client:up": "docker-compose -f docker-compose.yml -f docker-compose.client.yml up -d",
    "docker-with-client:up:build": "docker-compose -f docker-compose.yml -f docker-compose.client.yml up -d --build",
    "docker:down": "docker-compose -f docker-compose.yml -f docker-compose.client.yml down",
    "docker:downv": "docker-compose down -v",
    "migrate": "knex migrate:latest --knexfile src/infra/database/knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile src/infra/database/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/infra/database/knexfile.ts",
    "seed": "knex seed:run --knexfile src/infra/database/knexfile.ts",
    "db:reset": "npm run migrate:rollback && npm run migrate && npm run seed",
    "client": "cd client && npm run start",
    "start:memory": "STORAGE_TYPE=memory npm start",
    "start:postgres": "STORAGE_TYPE=postgres npm start",
    "dev:memory": "STORAGE_TYPE=memory npm run dev",
    "dev:postgres": "STORAGE_TYPE=postgres npm run dev",
    "docker:up:memory": "STORAGE_TYPE=memory docker-compose up -d",
    "docker:up:postgres": "docker-compose -f docker-compose.postgres.yml up -d"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "websockets",
    "langchain",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/anthropic": "^0.3.18",
    "@langchain/community": "^0.3.41",
    "@langchain/core": "^0.3.45",
    "@langchain/langgraph": "^0.2.65",
    "@nestjs/common": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.14.1",
    "pg-connection-string": "^2.7.0",
    "react-markdown": "^10.1.0",
    "uuid": "^9.0.1",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "axios": "^1.9.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
